.container {
  display: inline-flex;
  flex-direction: row;
  height: 60rpx; /* 根据最高元素 08 font-size 设置 */
}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline; /* No 08 | 基于底部对齐 */
}

.plain {
  font-size: 32rpx;
}

.index {
  margin: 0 14rpx 0 0;
  line-height: 60rpx; /* 取消字体上下间距 */
  font-size: 60rpx; /* 取消字体上下间距 */
  font-weight: 800;
}

.vertical-line {
  margin: 0 14rpx 0 0;
  border-left: 1rpx solid #000;
  height: 44rpx;
}

.date-container {
  display: flex;
  flex-direction: column;
  margin: 5rpx 0 0 0;
}

.month {
  line-height: 24rpx;
  font-size: 24rpx;
}

.year {
  font-size: 20rpx;
}
