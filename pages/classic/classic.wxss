.container {
  display: flex;
	flex-direction: column;
	align-items: center;
	width: 100%;
}

.header {
  display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	border-top: 1rpx solid #f5f5f5;
	border-bottom: 1rpx solid #f5f5f5;
	width: 100%;
	height: 100rpx;
}

.epsoide {
  margin: 14rpx 0 0 20rpx;
}

.like-container {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-right: 30rpx;
}

.like {
  margin: 12rpx 30rpx 0 0;
}

.navi {
  /* 距底部固定距离 */
	position: absolute;
	bottom: 40rpx;
}

.share-btn {
  margin: 20rpx 0 0 10rpx;
}

.share {
	width: 40rpx;
	height: 40rpx;
}
